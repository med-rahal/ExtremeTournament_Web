{% extends 'base.html.twig' %}

{% block body %}

    <style>
        .card {
            background-color: #15172b;
            border-radius: 20px;
            box-sizing: border-box;


            width: 320px;
        }
    </style>
    <div class="row"  >
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 200px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h3 class="card-header" style="background-color: #2e383c">Join team</h3>
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label" style="color: #dfe0e1">Name</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label" style="color: #dfe0e1">prenom</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.prenom,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label" style="color: #dfe0e1">Username</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(form.username,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label" style="color: #dfe0e1">Email</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}


                    <label for="inputText" class="col-sm-4 col-form-label" style="color: #dfe0e1">Your BirthDay</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date_naissance,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(form.date_naissance,{'attr':{'class':'text-danger'}}) }}






                    <br/>
                    <div class="button-a" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.Join,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>





{% endblock %}