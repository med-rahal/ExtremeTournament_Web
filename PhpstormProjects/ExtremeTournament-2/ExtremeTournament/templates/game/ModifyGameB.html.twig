{% extends 'baseback.html.twig' %}
{%  block body  %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 50px; padding: 50px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Tournament Admin </h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-12 col-form-label">Nom Tournament </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nomT,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.nomT,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-6 col-form-label">Emplacement</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.emplacementT,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.emplacementT,{'attr':{'class':'text-danger'}}) }}

                    <label input type="date" name="Date" class="col-sm-4 col-form-label">Date </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.dateT,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.dateT,{'attr':{'class':'text-danger'}}) }}



                    <br/>
                    <div class="col-sm-11" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Add,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>
{% endblock %}