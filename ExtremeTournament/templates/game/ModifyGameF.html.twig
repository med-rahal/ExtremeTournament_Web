{% extends 'base.html.twig' %}
{% block body %}
    <div class="row" xmlns="http://www.w3.org/1999/html">
        <div  style="display-role: flex;align-items: center;justify-content: center;margin-top: 130px; padding: 130px;">

            <div class="card-body">
                <div class="card-body">
                    <h5 class="card-title"> Update Your Own Tournament</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-15 col-form-label">Nom Tournament </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nomT,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.nomT,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-3 col-form-label">Emplacement</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.emplacementT,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.emplacementT,{'attr':{'class':'text-danger'}}) }}

                    <label input type="date" name="Date" class="col-sm-3 col-form-label">Date </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.dateT,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.dateT,{'attr':{'class':'text-danger'}}) }}



                    <br/>
                    <div class="col-sm-15" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Add,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>
{% endblock %}